<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonDimen">
        <item name="android:elevation">20dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DefaultButton" parent="DefaultButtonDimen">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextHolder" parent="DefaultButtonDimen">
        <item name="android:background">@drawable/textholder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="ColoredButton" parent="DefaultButtonDimen">
        <item name="android:background">@drawable/button_colored</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ColoredRoundedLeft" parent="DefaultButtonDimen">
        <item name="android:background">@drawable/button_colored_rounded_left</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DefaultRoundedRight" parent="DefaultButtonDimen">
        <item name="android:background">@drawable/button_default_rounded_right</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NavBarDimen">
        <item name="android:elevation">20dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DefaultTextStyle">
        <item name="android:elevation">20dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:elevation">20dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SecondTextStyle">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ButtonRemoveTags" parent="DefaultButton">
        <item name="android:textColor">@color/stroke_gray</item>
        <item name="android:drawableRight">@drawable/ic_remove</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/stroke_gray</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="FilterItemsStyle">
        <item name="android:textColor">@color/stroke_gray</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="StoreProductTags" parent="ColoredButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ViewProductTag" parent="DefaultButton">
        <item name="android:textColor">@color/stroke_gray</item>
        <item name="android:drawableTint">@color/stroke_gray</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>