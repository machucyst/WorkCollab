<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/deviceTheme" />
            <stroke android:color="@color/deviceThemeInverted" android:width="2dp"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/deviceThemeInverted" />
            <stroke android:width="2dp" android:color="@color/deviceTheme" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>