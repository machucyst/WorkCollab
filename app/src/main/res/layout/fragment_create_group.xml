<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fui_transparent"
        tools:context=".fragments.CreateGroupFragment">

        <LinearLayout
            android:background="@drawable/background_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deviceTheme2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/DefaultTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/bahnschrift"
                    android:text="Create Group"
                    android:textColor="@color/deviceThemeInverted"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="0.2"
                android:background="@color/deviceTheme2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_GN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/bahnschrift"
                    android:text="Group Name:"
                    android:textColor="@color/deviceThemeInverted"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_GN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textholder"
                    android:ems="10"
                    android:fontFamily="@font/bahnschrift"
                    android:hint="Users Group"
                    android:inputType="text"
                    android:padding="2dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/stroke_gray"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:background="@color/deviceTheme2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/bahnschrift"
                    android:text="Invite Members:"
                    android:textColor="@color/deviceThemeInverted"
                    android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_addUsers"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_addUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="0dp"
                    android:elevation="30dp"
                    android:textColor="@color/black"
                    app:endIconDrawable="@drawable/ic_baseline_add_24"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/et_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textholder"
                        android:ems="10"
                        android:fontFamily="@font/bahnschrift"
                        android:hint="joeBiden@gmail.com"
                        android:inputType="text"
                        android:padding="5dp"
                        android:paddingStart="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/stroke_gray"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_showPass"
                style="@style/TextHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="100dp"
                android:layout_weight="0"
                android:paddingHorizontal="50dp"
                android:text="Submit"
                android:textColor="@color/black" />
        </LinearLayout>

    </FrameLayout>
</layout>