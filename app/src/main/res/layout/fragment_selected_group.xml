    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SelectedGroupFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/background_default"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/imageWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/iv_groupImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_test" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_groupName"
                    style="@style/SecondTextStyle"
                    android:autoSizeTextType="uniform"
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:paddingStart="2dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="100"
                    android:gravity="center_vertical"
                    android:text="TextView" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadlines: "
                        style="@style/LightTextStyle"
                        android:textColor="@color/deviceThemeInverted2"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_deadlines"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginHorizontal="10dp"
                        android:minHeight="1dp">
                    </androidx.recyclerview.widget.RecyclerView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/btnTasks"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            style="@style/LightTextStyle"
                            android:textSize="20sp"
                            android:drawableLeft="@drawable/ic_task"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:background="@drawable/background_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View your tasks"
                            android:textColor="@color/white"
                            android:drawableRight="@drawable/ic_kb_right_24"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/btnSettings"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            style="@style/LightTextStyle"
                            android:textSize="20sp"
                            android:drawableLeft="@drawable/ic_gear"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:background="@drawable/background_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit group"
                            android:textColor="@color/white"
                            android:drawableRight="@drawable/ic_kb_right_24"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginBottom="120dp"
                        android:id="@+id/btnChat"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            style="@style/LightTextStyle"
                            android:textSize="20sp"
                            android:drawableLeft="@drawable/ic_chat"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:background="@drawable/background_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chat with group"
                            android:textColor="@color/white"
                            android:drawableRight="@drawable/ic_kb_right_24"/>
                    </androidx.cardview.widget.CardView>


