<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fui_transparent"
        tools:context=".fragments.CreateGroupFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deviceTheme2"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            style="@style/DefaultTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Create Task"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="30dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:background="@drawable/background_default"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_TN"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bahnschrift"
                                    android:text="Task Title:"
                                    android:layout_marginTop="10dp"
                                    android:paddingHorizontal="15dp"
                                    style="@style/LightTextStyle"
                                    android:textSize="20dp" />

                                <EditText
                                    android:id="@+id/et_TN"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/textholder"
                                    android:ems="10"
                                    android:fontFamily="@font/bahnschrift"
                                    android:hint="Users Group"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:paddingStart="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/stroke_gray"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_default"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_TD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/bahnschrift"
                                    android:text="Description:"
                                    style="@style/LightTextStyle"
                                    android:textSize="20dp" />

                                <MultiAutoCompleteTextView
                                    android:id="@+id/et_TD"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/textholder"
                                    android:ems="10"
                                    android:fontFamily="@font/bahnschrift"
                                    android:gravity="top|left"
                                    android:hint="Enter a task description..."
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:paddingStart="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/stroke_gray"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/tv_until"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/bahnschrift"
                                    android:text="Until:"
                                    style="@style/LightTextStyle"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_until"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_weight="1"
                                        android:elevation="30dp"
                                        android:textColor="@color/black"
                                        app:endIconDrawable="@drawable/ic_edit_calendar"
                                        app:endIconMode="custom"
                                        app:endIconTint="@color/black"
                                        app:hintEnabled="false">

                                        <EditText
                                            android:id="@+id/et_until"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/textholder"
                                            android:ems="10"
                                            android:fontFamily="@font/bahnschrift"
                                            android:hint="12/31 8:00 AM"
                                            android:enabled="false"
                                            android:inputType="text"
                                            android:padding="5dp"
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/stroke_gray"
                                            android:textSize="20dp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="80dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:padding="5dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_default"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:paddingLeft="5dp"
                                    android:id="@+id/tv_add"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/bahnschrift"
                                    android:text="Assign to:"
                                    android:layout_margin="5dp"
                                    style="@style/LightTextStyle"
                                    android:textSize="20dp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_members"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_showPass"
                                    style="@style/TextHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|bottom"
                                    android:layout_marginBottom="20dp"
                                    android:layout_weight="0"
                                    android:layout_marginTop="20dp"
                                    android:paddingHorizontal="50dp"
                                    android:text="Submit"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>



        </LinearLayout>

    </FrameLayout>
</layout>