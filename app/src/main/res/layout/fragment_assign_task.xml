<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fui_transparent"
        tools:context=".fragments.CreateGroupFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deviceTheme2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/DefaultTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/bahnschrift"
                    android:text="Create Group"
                    android:textColor="@color/deviceThemeInverted"
                    android:textSize="30dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.2"
                        android:background="@color/deviceTheme2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_TN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Task Name:"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/et_TN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/textholder"
                            android:ems="10"
                            android:fontFamily="@font/bahnschrift"
                            android:hint="Users Group"
                            android:inputType="text"
                            android:padding="2dp"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/stroke_gray"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@color/deviceTheme2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_TD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Description:"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="20dp" />

                        <MultiAutoCompleteTextView
                            android:id="@+id/et_TD"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="top|left"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/textholder"
                            android:ems="10"
                            android:fontFamily="@font/bahnschrift"
                            android:hint="Clear text...etc"
                            android:inputType="text"
                            android:padding="2dp"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/stroke_gray"
                            android:textSize="20dp"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="0.2"
                        android:background="@color/deviceTheme2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_until"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Until:"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_until"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="0dp"
                                android:layout_weight="1"
                                android:elevation="30dp"
                                android:textColor="@color/black"
                                app:endIconDrawable="@drawable/ic_edit_calendar"
                                app:endIconMode="custom"
                                app:endIconTint="@color/black"
                                app:hintEnabled="false">

                                <EditText
                                    android:id="@+id/et_until"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@drawable/textholder"
                                    android:ems="10"
                                    android:fontFamily="@font/bahnschrift"
                                    android:hint="joeBiden@gmail.com"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:paddingStart="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/stroke_gray"
                                    android:textSize="20dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="2"
                        android:background="@color/deviceTheme2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Assign to:"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="20dp" />

                        <SearchView
                                android:id="@+id/et_searchMembers"
                                android:layout_margin="10dp"
                                android:background="@drawable/textholder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:layout_marginHorizontal="10dp"
                                />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_members"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@color/white" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_showPass"
                        style="@style/TextHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="100dp"
                        android:layout_weight="0"
                        android:paddingHorizontal="50dp"
                        android:text="Submit"
                        android:textColor="@color/black" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </FrameLayout>
</layout>