<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SelectedGroupFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/deviceTheme"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_taskName"
                    style="@style/SecondTextStyle"
                    android:autoSizeTextType="uniform"
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/deviceThemeInverted"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:text="TaskName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@color/deviceTheme2"
                        android:elevation="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dashboard"
                            style="@style/SecondTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingRight="10dp"
                            android:text="Description"
                            android:textAlignment="textEnd"
                            android:textColor="@color/deviceThemeInverted"
                            android:textSize="34sp" />

                        <MultiAutoCompleteTextView
                            android:id="@+id/et_TD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="150dp"
                            android:maxHeight="200dp"
                            android:gravity="top|left"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/textholder"
                            android:ems="10"
                            android:fontFamily="@font/bahnschrift"
                            android:hint="Clear text...etc"
                            android:inputType="text"
                            android:padding="2dp"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/stroke_gray"
                            android:textSize="20dp"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fileName"
                            android:layout_gravity="center"
                            style="@style/TextHolder"
                            android:paddingLeft="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="UploadFile.exe" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"

                            android:layout_marginBottom="100dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnUpload"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Upload" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnPlace"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="a" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSubmit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Submit" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>